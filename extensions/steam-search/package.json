{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "steam-search",
  "title": "Steam Search",
  "description": "Search for games on Steam and view details",
  "icon": "extension-icon.png",
  "author": "Fitzypopper",
  "license": "MIT",
  "categories": [
    "Data",
    "Productivity"
  ],
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  },
  "commands": [
    {
      "name": "index",
      "title": "Search Games",
      "description": "Search games on the Steam Store",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}